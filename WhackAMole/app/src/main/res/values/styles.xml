<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>"
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MoleButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/mole</item>  <!-- 1. Set your mole drawable -->
        <item name="android:scaleType">fitCenter</item>          <!-- 2. Scale image to fit, centered -->
        <item name="android:background">@android:color/transparent</item> <!-- 3. Borderless - transparent background -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:onClick">onMoleClicked"</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:contentDescription">@string/mole</item>
    </style>

    <style name="RedXStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/red_x</item>  <!-- 1. Set your mole drawable -->
        <item name="android:scaleType">fitCenter</item>          <!-- 2. Scale image to fit, centered -->
        <item name="android:background">@android:color/transparent</item> <!-- 3. Borderless - transparent background -->
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:contentDescription">"Red X"</item>
    </style>

</resources>
